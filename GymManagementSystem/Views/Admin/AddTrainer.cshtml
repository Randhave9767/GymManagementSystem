@model IEnumerable<GymManagementSystem.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-decoration-underline">New Users:</h2>

<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNo)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="NewTrainer" asp-route-id="@item.Id">Add Trainer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div><a asp-action="GetTrainers" class="btn btn-outline-primary">Back to List</a></div>
