<link href="~/css/register.css" rel="stylesheet" type="text/css" />



<br />
<div class="container ">
    <div class="row">
        
        <div class="col-md-4 mx-auto form1">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />
           <div class="d-flex justify-content-center">
            <span class=""><img src="~/image/user_icon2.jpg"/></span>
 
            </div>
            <h2 class="text-center">Login</h2>
            <br />
            <form asp-action="Login" method="post">
                <div class="form-group">
                    @*<label class="">USERNAME</label>*@
                    <input type="text" class="form-control border border-3" id="username" name="username" placeholder="Username"/>
                </div>
                <br />
                <div class="form-group">
                    @*<label>Password</label>*@
                    <input type="text" class="form-control border border-3" id="password" name="password" placeholder="Password" />
                </div>
                
                <div class="form-group">
                    <label></label>
                    <input type="submit" class="btn btn-dark w-100" value="Login" />
                
                    <div class="new_link"><p>Don't have an account <a asp-action="Signup" class="new_tag">Create here</a></p></div>
                    
                    
                </div>
                <br />
            </form>
        </div>
    </div>
</div>




